<!doctype html>
<html lang="en" dir="ltr">

{{>head title='Planeador'}}

<body class="">
    <div class="page">
        <div class="flex-fill">
            {{>header }}

            <div class="my-3 my-md-5">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="container">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">Planificador</h3>
                                        <div class="card-options">
                                            <form action="">
                                                <div class="input-group">
                                                    <input type="text" class="form-control form-control-sm"
                                                        placeholder="Buscar algo" name="s">
                                                    <span class="input-group-btn ml-2">
                                                        <button class="btn btn-sm btn-default" type="submit">
                                                            <span class="fe fe-search"></span>
                                                        </button>
                                                    </span>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-2">
                                                <button class="btn btn-icon btn-secondary btn-sm">
                                                    <i class="fe fe-plus-square"></i>
                                                </button>
                                            </div>
                                            <div class="col-2">
                                                <button class="btn btn-icon btn-secondary btn-sm">
                                                    <i class="fe fe-user-plus"></i>
                                                </button>
                                            </div>
                                            <div class="col-8">
                                                <div class="form-group">
                                                    {{!-- <label class="form-label">Proyectos</label> --}}
                                                    <select name="beast" id="select-beast"
                                                        class="form-control form-control-sm custom-select">
                                                        <option value="1" selected>Escoge un proyecto</option>
                                                        <option value="1">Chuck Testa</option>
                                                        <option value="4">Sage Cattabriga-Alosa</option>
                                                        <option value="3">Nikola Tesla</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="content mt-4">

                                            <ul>
                                                <li style="list-style: none;">
                                                    Redesign Website
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="container">
                                <div style="border: 1px solid #ddd;border-radius: 3px;overflow: scroll;">
                                    <svg id="gantt" height="314" class="gantt"></svg>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <script src="/apps/admin-template/planner.js"></script>
        {{>footer}}
    </div>
</body>

</html>