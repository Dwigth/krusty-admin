<div class="header py-4">
    <div class="container">
        <div class="d-flex">
            <a class="header-brand" href="/home">
                <img src="/admin-template/krusty-lab/images/logo-krusty.svg" class="header-brand-img" alt="krusty logo">
            </a>
            <div class="d-flex order-lg-2 ml-auto">
                {{!-- Notificaciones --}}
                <div class="dropdown d-none d-md-flex">
                    <a class="nav-link icon" data-toggle="dropdown">
                        <i class="fe fe-bell"></i>
                        <span class="nav-unread"></span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                        <div id="notification-container"></div>
                        <div class="dropdown-divider"></div>
                        <a id="mark-as-read" href="#" class="dropdown-item text-center">Marcar como leído</a>
                    </div>
                </div>
                {{!-- End Notificaciones --}}
                {{!-- Profile Menu --}}
                <div class="dropdown">
                    <a href="#" class="nav-link pr-0 leading-none" data-toggle="dropdown">
                        <span class="avatar" id="avatar" style="background-image: url()"></span>
                        <span class="ml-2 d-none d-lg-block">
                            <span id="nombre" class="text-default"></span>
                            <small id="nivel" class="text-muted d-block mt-1"></small>
                        </span>
                    </a>
                    <div id="user-dropdown" class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                        {{user_menu_builder}}
                        <div class="dropdown-divider"></div>
                        <a id="cerrar-sesion" class="dropdown-item" href="#">
                            <i class="dropdown-icon fe fe-log-out"></i> Cerrar sesión
                        </a>
                    </div>
                </div>
                {{!-- End Profile Menu --}}
                {{show_userdata}}

            </div>
            <a href="#" class="header-toggler d-lg-none ml-3 ml-lg-0" data-toggle="collapse"
                data-target="#headerMenuCollapse">
                <span class="header-toggler-icon"></span>
            </a>
        </div>
    </div>
</div>
<div class="header collapse d-lg-flex p-0" id="headerMenuCollapse">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-3 ml-auto">
                <form class="input-icon my-3 my-lg-0">
                    <input type="search" class="form-control header-search" placeholder="Search&hellip;" tabindex="1">
                    <div class="input-icon-addon">
                        <i class="fe fe-search"></i>
                    </div>
                </form>
            </div>
            <div class="col-lg order-lg-first">
                <ul class="nav nav-tabs border-0 flex-column flex-lg-row">
                    {{main_menu_builder }}
                </ul>
            </div>
        </div>
    </div>
</div>